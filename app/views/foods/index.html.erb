<center>
  <h1>Menu Items</h1>
<% if @foods.present? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= link_to food.name, user_food_path(current_user, food) %></td>
          <td><%= link_to 'Remove All', user_food_path(current_user, food), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <p>You currently do not have any menu item plans.</p>
  <% end %>
  <br>

  <%= link_to 'New Food', new_user_food_path(current_user) %>
</center>
