<center>
  <h1>Restaurants</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Cuisine</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= link_to restaurant.name, user_restaurant_path(current_user, restaurant) %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone %></td>
          <td><%= restaurant.cuisine %></td>
          <td><%= link_to 'Delete', user_restaurant_path(current_user, restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add New Restaurant', new_user_restaurant_path %>
</center>
