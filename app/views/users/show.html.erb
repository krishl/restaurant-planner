<body class="userShow">
<center <%= "data-user-id=#{params[:id]}" if params.has_key?(:id) %>>
  <h2>Hello, <%= current_user.email %></h2>

<p>How would you like to view your plans?</p><br>

<p><%= link_to "Sort By Restaurant", user_restaurants_path(current_user), class: 'btn btn-info', id: 'sort_restaurants' %>
  <%= link_to "Sort By Menu Item", user_foods_path(current_user), class: 'btn btn-info', id: 'sort_foods' %></p>

<div class="sorted_restaurants">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Restaurant Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Cuisine</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    </tbody>
  </table>
  <br>
  <%= link_to 'Add New Restaurant', new_user_restaurant_path(current_user), class: 'btn btn-info', id: 'add_new_rest' %>

  <div class="new_restaurant">
    <p><br><%= render 'restaurants/form', restaurant: @restaurant %></p>
  </div>
</div>

<div class="sorted_foods">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Food Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    </tbody>
  </table>
  <br>
  <%= link_to 'Add New Menu Item', new_user_food_path(current_user), class: 'btn btn-info', id: 'add_new_food' %>

  <div class="new_food">
    <p><br><%= render 'foods/form', food: @food %></p>
  </div>
</div>

</center>
</body>


